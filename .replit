modules = ["c-clang14", "haskell-ghc9.4", "bash", "haskell-ghc9.8"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["llvm_18", "clang_18", "cabal-install", "zlib", "pkg-config"]

[deployment]
deploymentTarget = "autoscale"
run = ["./bin/WCalcLang"]
build = ["make", "install-haskell"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Server"

[[workflows.workflow]]
name = "Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./bin/WCalcLang"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38555
externalPort = 3000
